<table class="table table-bordered table-striped table-responsive">
  <thead>
    <tr>
      <% _.each(table.columns, function(column) { %>
          <th data-field-name="<%- column %>">
             <%- column %>
             <% if(table.sort.attribute === column) { %>
                 <span class="glyphicon glyphicon-chevron-<%- table.sort.direction === 'asc' ? 'up' : 'down' %>"></span>
             <% } %>
          </th>
      <% }); %>
    </tr>
  </thead>

  <tbody>
    <% _.each(table.rows, function(row) { %>
      <tr>
        <% _.each(table.columns, function(column) { %>
          <td><%- row[column] %></td>
        <% }); %>
      </tr>
    <% }); %>
  </tbody>
</table>
